// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_URL")
}

// data models
model Channels {
  id         BigInt   @id @default(autoincrement())
  chatId     BigInt   @unique
  name       String
  username   String?
  isChannel  Boolean
  isActive   Boolean
  created_at DateTime @default(now())
}

model UserInformation {
  telegramUserId BigInt   @id @unique
  isBot          Boolean
  firstName      String
  lastName       String?
  username       String?
  languageCode   String?
  isAuthorized   Boolean  @default(false)
  created_at     DateTime @default(now())
}

model Ads {
  id         BigInt     @id @default(autoincrement())
  name       String
  enabled    Boolean    @default(false)
  text       String?
  created_at DateTime   @default(now())
  AdsMedia   AdsMedia[]
  AdsLink    AdsLink[]
}

model AdsMedia {
  id         BigInt   @id @default(autoincrement())
  ads        Ads      @relation(fields: [adsId], references: [id])
  adsId      BigInt
  fileId     BigInt   @unique
  fileType   String
  created_at DateTime @default(now())
}

model AdsLink {
  id         BigInt   @id @default(autoincrement())
  ads        Ads      @relation(fields: [adsId], references: [id])
  adsId      BigInt
  order      Int
  text       String
  url        String   @unique
  created_at DateTime @default(now())
}
